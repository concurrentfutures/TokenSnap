{
  "manifest_version": 2,
  "name": "TokenSnap",
  "version": "1.0.0",
  "description": "Copy Discord user token or log in with a provided token",
  "permissions": [
    "clipboardWrite",
    "activeTab",
    "*://*.discord.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.discord.com/*"],
      "js": ["content.js"]
    }
  ]
}